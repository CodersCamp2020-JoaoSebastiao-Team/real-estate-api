{
   "compilerOptions": {
      "module": "commonjs",
      "lib": ["es6", "dom", "es2016", "es2017"],                     /* Redirect output structure to the directory. */
      "rootDir": "./",  
      "moduleResolution": "node",
      "strict": true,  
      "esModuleInterop": true, 
      "pretty": true,
      "target": "es6",
      "outDir": "./dist",
      "baseUrl": "./",
      "forceConsistentCasingInFileNames": true
   },
   "exclude": [
     "node_modules"
   ]
}